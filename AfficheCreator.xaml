<Window x:Class="PriceTicker.AfficheCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PriceTicker"
        mc:Ignorable="d"
        Title="Créateur d'affiches" Height="800" Width="1400" MinHeight="800" MinWidth="1400">
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlackColor" Color="Black"/>
        <SolidColorBrush x:Key="SecondaryOrangeColor" Color="#FFCE7B00"/>

        <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#BBC1D1"/>

        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#BBC1D1"/>
        
        <!-- Styles -->
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>


        <FontFamily x:Key="Mass_Effect">./Fonts/Mass_Effect.ttf</FontFamily>

    </Window.Resources>
    <Grid Background="{DynamicResource SecondaryTextColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchByProductNameTb" Grid.Column="0"
                     Text="Nom du Produit"
                     Height="30"
                     Width="180"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="18"/>
            <ComboBox Visibility="Hidden" Height="30"  Width="180" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16">
                <ComboBoxItem IsSelected="True" Content="Toutes les catégories"/>
                <ComboBoxItem Content="PC Fixes"/>
                <ComboBoxItem Content="PC Pro"/>
            </ComboBox>
        </Grid>
        <TextBlock Text="Aperçu"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"/>
        <Image x:Name="imgAffiche" Source="/PriceTicker;component/Img/Patron_feuille_finale.bmp" 
               Margin="25,0,25,0"
               Grid.Column="1"
               Grid.Row="1"
               Height="auto"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <DockPanel Grid.Row="1" Grid.Column="0"  Margin="25,0,25,0">
            <DataGrid  x:Name="ConfigGroupDataGrid" ItemsSource="{Binding}"  ScrollViewer.CanContentScroll="True" IsReadOnly="True" TextBlock.TextAlignment="Center" HorizontalAlignment="Center"
                      SelectionMode="Single" AllowDrop="False" RowHeaderWidth="0" DataGrid.CanUserResizeColumns="False" DataGrid.CanUserResizeRows="False" CanUserAddRows="false" VirtualizingStackPanel.IsVirtualizing="False">
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Ouvrir dans le navigateur" Click="OpenURLinNav"  />
                    </ContextMenu>
                </DataGrid.ContextMenu>
                <DataGrid.Columns>
                    <DataGridTextColumn Width="0.15*" Header="ID" Binding="{Binding id}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                    <DataGridTextColumn Width="0.65*" Header="Libellé" Binding="{Binding name}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                    <DataGridTextColumn Width="0.20*" Header="Prix" Binding="{Binding prix}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                </DataGrid.Columns>
                <DataGrid.RowDetailsTemplate>
                    <DataTemplate >
                        <Border BorderThickness="0" Padding="10">
                            <WrapPanel HorizontalAlignment="Center" Width="700" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal" >
                                <Image Width="50" Height="50" Source="/PriceTicker;component/Img/ComposantsPC/Boitier.png" VerticalAlignment="Center" Margin="30,0,0,0"/>
                                    <TextBlock Width="150" Height="50" TextWrapping="Wrap" FontSize="11" Foreground="MidnightBlue" Text="{Binding boitier}" VerticalAlignment="Center" Margin="0,0,30,0" TextAlignment="Left"/>
                                </StackPanel>
                                
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="50" Height="50" Source="/PriceTicker;component/Img/ComposantsPC/Carte_mere.png" VerticalAlignment="Center" Margin="0,0,0,0"/>
                                    <TextBlock  Width="150" Height="50" TextWrapping="Wrap" FontSize="11" Foreground="MidnightBlue" Text="{Binding carteMere}" VerticalAlignment="Center" Margin="0,0,30,0" TextAlignment="Left"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal">
                                <Image Width="50" Height="50" Source="/PriceTicker;component/Img/ComposantsPC/CPU.png" VerticalAlignment="Center" />
                                    <TextBlock Width="150" Height="50" TextWrapping="Wrap" FontSize="11" Foreground="MidnightBlue" Text="{Binding processeur}" VerticalAlignment="Center" TextAlignment="Left"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Image Width="50" Height="50" Source="/PriceTicker;component/Img/ComposantsPC/RAM.png" VerticalAlignment="Center" Margin="160,0,0,0"/>
                                    <TextBlock Width="150" Height="50" TextWrapping="Wrap" FontSize="11" Foreground="MidnightBlue" Text="{Binding ram}" VerticalAlignment="Center" Margin="0,0,30,0" TextAlignment="Left"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" >
                                    <Image Width="50" Height="50" Source="/PriceTicker;component/Img/ComposantsPC/Carte_Graphique.png"/>
                                    <TextBlock  Width="150" Height="50" TextWrapping="Wrap" TextBlock.FontSize="11" Foreground="MidnightBlue" Text="{Binding carteGraphique}" TextAlignment="Left" VerticalAlignment="Center"/>
                                </StackPanel>
                                

                            </WrapPanel>
                        </Border>
                    </DataTemplate>
                </DataGrid.RowDetailsTemplate>
            </DataGrid>
        </DockPanel>
        <ProgressBar Grid.Row="1"
                     x:Name="ProgressBar"
                     Height="20"
                     Width="200"
                     Visibility="Hidden"/>
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextAlignment="Center"
                   x:Name="ProgressTextBlock"
                   Height="20"
                   Width="200"
                   Background="Transparent"
                   Visibility="Hidden"/>
        <Button x:Name="ValiderAfficheBtn"
                
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Content="Valider l'affiche"
                FontSize="18"
                Width="180"
                Height="30" Click="ValiderAffiche" 
                />
    </Grid>
</Window>
