<Window x:Class="PriceTicker.AfficheCreator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PriceTicker"
        mc:Ignorable="d"
        Title="Créateur d'affiches" Height="600" Width="1000">
    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBlackColor" Color="Black"/>
        <SolidColorBrush x:Key="SecondaryOrangeColor" Color="#FFCE7B00"/>

        <SolidColorBrush x:Key="PrimaryTextColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryTextColor" Color="#BBC1D1"/>

        <SolidColorBrush x:Key="PrimaryGrayColor" Color="#BBC1D1"/>
        
        <!-- Styles -->
        <Style x:Key="CenterGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
       
    </Window.Resources>
    <Grid Background="{DynamicResource SecondaryTextColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="0.4*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="SearchByProductNameTb" Grid.Column="0"
                     Text="Nom du Produit"
                     Height="30"
                     Width="180"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     FontSize="18"/>
            <ComboBox Height="30"  Width="180" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16">
                <ComboBoxItem IsSelected="True" Content="Toutes les catégories"/>
                <ComboBoxItem Content="PC Fixes"/>
                <ComboBoxItem Content="PC Pro"/>
            </ComboBox>
        </Grid>
        <TextBlock Text="Aperçu"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="30"
                   FontWeight="Bold"/>
        <Image x:Name="imgAffiche" Source="/PriceTicker;component/Img/Patron_feuille_finale.bmp" 
               Margin="25,0,25,0"
               Grid.Column="1"
               Grid.Row="1"
               Height="auto"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>
        <ScrollViewer Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto" Margin="25,0,25,0">
            <DataGrid TextBlock.TextAlignment="Center" HorizontalAlignment="Center" Height="auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Width="0.2*" Header="ID" Binding="{Binding Id}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                    <DataGridTextColumn Width="0.6*" Header="Libellé" Binding="{Binding libelle}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                    <DataGridTextColumn Width="0.2*" Header="Prix" Binding="{Binding prix}" HeaderStyle="{StaticResource CenterGridHeaderStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
        <Button x:Name="ValiderAfficheBtn"
                
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Content="Valider l'affiche"
                FontSize="18"
                Width="180"
                Height="30" Click="FindHTMLCode" 
                />
    </Grid>
</Window>
